<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dp"
            android:gravity="center"
            android:text="@string/pick_a_park"
            android:textColor="#231F1F"
            android:textSize="50sp" />

    <ImageButton
        android:id="@+id/magicKingdom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/magickingdom"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="150dp"
        android:onClick="magicClick"
        android:contentDescription="@string/mkTODO" />

    <ImageButton
        android:id="@+id/epcot"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/epcot"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="300dp"
        android:onClick="epcotClick"
        android:contentDescription="@string/epTODO" />

        <ImageButton
            android:id="@+id/animalKingdom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/animalkingdom"
            android:onClick="animalClick"
            android:contentDescription="@string/akTODO" />

        <ImageButton
            android:id="@+id/hollywood"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/hollywood"
            android:onClick="hollywoodClick"
            android:contentDescription="@string/hsTODO" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>